@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "My Order History";
}

<div class="container px-4 px-lg-5">
    @if (Model.Any())
    {
        <table class="table table-info table-striped mb-0">
            <thead>
                <tr>
                    <th scope="col">Order number</th>
                    <th scope="col">Date</th>
                    <th scope="col">Total</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) 
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.OrderNumber)</th>
                        <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                        <td>$ @Html.DisplayFor(modelItem => item.Total)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>
                            <a asp-controller="Order" asp-action="Detail" asp-route-orderId="@item.OrderNumber">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="row">
            Orders are empty.
        </h3>

        <section>
            <a asp-controller="Home" asp-action="Index" class="btn text-white">[ Continue Shopping ]</a>
        </section>
    }
</div>